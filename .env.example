# Marketing Budget Optimizer - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME="Marketing Budget Optimizer"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# =============================================================================
# DATABASE (PostgreSQL + TimescaleDB)
# =============================================================================
DATABASE_URL=postgresql://mbo_user:mbo_password_change_me@localhost:5432/marketing_budget_optimizer

# =============================================================================
# REDIS (Cache)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# RABBITMQ / CELERY (Task Queue)
# =============================================================================
CELERY_BROKER_URL=amqp://mbo_user:mbo_password_change_me@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# ANTHROPIC CLAUDE API
# =============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
MCP_HOST=localhost
MCP_GOOGLE_ADS_PORT=3001
MCP_META_ADS_PORT=3002
MCP_TIKTOK_ADS_PORT=3003
MCP_LINKEDIN_ADS_PORT=3004

# =============================================================================
# GOOGLE ADS API
# =============================================================================
# Setup guide: docs/07-platform-setup.md
# Get credentials: https://developers.google.com/google-ads/api/docs/first-call/overview
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token
GOOGLE_ADS_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_ADS_CLIENT_SECRET=your_client_secret
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token
GOOGLE_ADS_CUSTOMER_ID=123-456-7890
# Optional: Manager account ID (if using MCC)
GOOGLE_ADS_LOGIN_CUSTOMER_ID=

# =============================================================================
# META (FACEBOOK/INSTAGRAM) ADS API
# =============================================================================
# Setup guide: docs/07-platform-setup.md
# Get credentials: https://developers.facebook.com/
META_APP_ID=your_app_id
META_APP_SECRET=your_app_secret
META_ACCESS_TOKEN=your_access_token
META_AD_ACCOUNT_ID=act_123456789

# =============================================================================
# TIKTOK ADS API
# =============================================================================
# Setup guide: docs/07-platform-setup.md
# Get credentials: https://ads.tiktok.com/marketing_api/
TIKTOK_APP_ID=your_app_id
TIKTOK_APP_SECRET=your_app_secret
TIKTOK_ACCESS_TOKEN=your_access_token
TIKTOK_ADVERTISER_ID=your_advertiser_id

# =============================================================================
# LINKEDIN ADS API
# =============================================================================
# Setup guide: docs/07-platform-setup.md
# Get credentials: https://developer.linkedin.com/
LINKEDIN_CLIENT_ID=your_client_id
LINKEDIN_CLIENT_SECRET=your_client_secret
LINKEDIN_ACCESS_TOKEN=your_access_token
LINKEDIN_AD_ACCOUNT_ID=your_ad_account_id

# =============================================================================
# OPTIMIZATION SETTINGS
# =============================================================================
# AI will auto-execute actions if confidence exceeds this threshold (0.0-1.0)
CONFIDENCE_THRESHOLD=0.85

# Maximum percentage of budget that can be reallocated in a single day
MAX_BUDGET_REALLOCATION_PCT=30

# How often to sync data and run analysis (in minutes)
MONITORING_INTERVAL_MINUTES=15

# Minimum hours a campaign must run before AI can pause it
MIN_CAMPAIGN_RUNTIME_HOURS=72
